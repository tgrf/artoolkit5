  #

  s.source_files  = "include/ios7/**/*.{h,m}", "examples/ARAppCore/**/*.{h,m}"
  s.public_header_files = "include/ios7/**/*.{h,m}"
  s.vendored_libraries = "lib/ios7/**/*.a"
  s.preserve_paths = "lib/ios7/**/*.a"

  # ――― Project Linking ―――――――――――――――――――――――――――――――――――――――――――――――――――――――――― #
