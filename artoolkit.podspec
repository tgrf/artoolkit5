  s.requires_arc = true
  s.xcconfig  =  { 'LIBRARY_SEARCH_PATHS' => '"$(PODS_ROOT)/artoolkit"',
                 'HEADER_SEARCH_PATHS' => '"${PODS_ROOT}/Headers/artoolkit"' }

